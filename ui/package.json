{
    "name": "@molitio-core/ui",
    "version": "1.0.0",
    "author": "molitio foundation",
    "description": "Universal reusable React UI Components",
    "license": "CC0-1.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/molitio/molitio-core.git"
    },
    "keywords": [
        "molitio",
        "ui"
    ],
    "bugs": {
        "url": "https://github.com/molitio/molitio-core/issues"
    },
    "homepage": "https://github.com/molitio/molitio-core#readme",
    "main": "build/index.js",
    "module": "build/index.es.js",
    "typings": "build/types/index.d.ts",
    "bundle": {
        "esm": "build/bundle/index.esm.js",
        "umd": "build/bundle/index.umd.js"
    },
    "files": [
        "build"
    ],
    "engines": {
        "node": ">=12"
    },
    "husky": {
        "hooks": {
            "pre-commit": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
        }
    },
    "size-limit": [
        {
            "path": "build/index.js",
            "limit": "10 KB"
        },
        {
            "path": "build/index.es.js",
            "limit": "10 KB"
        },
        {
            "path": "build/bundle/index.esm.js",
            "limit": "10 KB"
        },
        {
            "path": "build/bundle/index.umd.js",
            "limit": "10 KB"
        },
        {
            "path": "build/types/index.d.ts",
            "limit": "10 KB"
        }
    ],
    "scripts": {
        "build": "rollup --config",
        "build:watch": "rollup --config --watch",
        "xpile": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps",
        "build:esm": "cross-env BABEL_ENV=esmUnbundled babel src --extensions '.ts,.tsx' --out-dir 'lib/esm' --source-maps",
        "build:cjs": "cross-env BABEL_ENV=cjs babel src --extensions '.ts,.tsx' --out-dir 'lib/cjs' --source-maps",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "peerDependencies": {
        "react": "^17.0.0",
        "react-dom": "^17.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.5",
        "@babel/core": "^7.16.0",
        "@babel/plugin-transform-typescript": "^7.14.6",
        "@babel/preset-env": "^7.14.5",
        "@babel/preset-typescript": "^7.14.5",
        "@material-ui/core": "^4.11.4",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "@rollup/plugin-typescript": "^8.3.0",
        "@size-limit/preset-small-lib": "^4.5.5",
        "@storybook/addon-actions": "^6.2.9",
        "@storybook/addon-essentials": "^6.2.9",
        "@storybook/addon-links": "^6.2.9",
        "@storybook/react": "^6.2.9",
        "@types/jasmine": "^3.7.7",
        "@types/node": "^15.12.2",
        "@types/react": "^17.0.11",
        "@types/react-dom": "^17.0.7",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "babel-cli": "^6.26.0",
        "babel-loader": "^8.2.2",
        "babel-preset-latest": "^6.24.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.28.0",
        "eslint-config-google": "^0.14.0",
        "husky": "^6.0.0",
        "jasmine": "^3.7.0",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "rollup": "^2.52.1",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "size-limit": "^4.12.0",
        "ts-node": "^10.0.0",
        "ts-node-dev": "^1.1.6",
        "tslib": "^2.3.0",
        "typescript": "^4.3.3"
    }
}
