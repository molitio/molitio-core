{
    "configurations": [
        {
            "type": "firefox",
            "request": "attach",
            "name": "firefox attach",
            "pathMappings": [
                {
                    "url": "webpack:///src",
                    "path": "${workspaceFolder}/src"
                }
            ]
        },
        {
            "type": "firefox",
            "name": "firefox debug",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:4200/",
            "pathMappings": [
                {
                    "url": "webpack:///src",
                    "path": "${workspaceFolder}/src"
                },
                {
                    "url": "http://localhost:4200/",
                    "path": "${workspaceFolder}"
                }
            ]
        },
        {
            "type": "pwa-chrome",
            "name": "chrome debug",
            "request": "launch",
            "url": "http://localhost:4200/"
        }
    ]
}