{
    // see https://www.typescriptlang.org/tsconfig to better understand tsconfigs
    "include": ["src"],
    "exclude": ["node_modules", "build", "example", "rollup.config.js"],
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "importHelpers": true,
        "downlevelIteration": false,
        "declaration": true,
        "declarationDir": ".",
        "sourceMap": true,
        "baseUrl": "./src",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true
    }
}
