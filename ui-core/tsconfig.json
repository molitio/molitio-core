{
    "include": ["src/**/*",  "__tests__/**/*"],
    "exclude": ["node_modules", "build", "dist", "example", "*.config.js"],
    "compilerOptions": {
        "target": "es5",
        "module": "es2020",
        "lib": ["dom", "dom.iterable", "esnext", "es6", "es2016", "es2017", "es2020"],
        "types": ["react", "node", "jest"],
        "typeRoots": ["./src", "./__tests__"],
        "resolveJsonModule": false,
        "isolatedModules": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "declaration": true,
        "baseUrl": "src",
        "outDir": "dist",
        "rootDir": ".",
        "declarationDir": "dist",
        "declarationMap": true,
        "composite": true,
        "strict": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    }
}
